<!-- 
19.5:9 aspect ratio
based on 1040x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <image name="background">
         <path>${backgroundPath-19_5-9}</path>
         <cropPos>${backgroundCropPos-19_5-9}</cropPos>
      </image>
      <textlist name="item-list">
         <pos>0.044230769230769 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
      <helpsystem name="help">
         <fontSize>${helpsystemFontSize}</fontSize>
         <entrySpacing>0.007692307692308</entrySpacing><!-- 8 -->
         <iconTextSpacing>0.002884615384615</iconTextSpacing><!-- 3 -->
      </helpsystem>
      <badges name="badges">
         <pos>0.969230769230769 0.083333333333333</pos><!-- 1008 40 -->
         <size>0.038461538461538 0.733333333333333</size><!-- 40 352 -->
      </badges>
   </view>
   <fontSize name="small,x-small">
      <variables>
         <selectedBackgroundMargins>0.009615384615385 0.009615384615385</selectedBackgroundMargins><!-- 10 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.013461538461538 0.013461538461538</selectedBackgroundMargins><!-- 14 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="large,x-large">
      <variables>
         <selectedBackgroundMargins>0.017307692307692 0.017307692307692</selectedBackgroundMargins><!-- 18 -->
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
      </variables>
   </fontSize>

   <!-- Variants: List -->
   <variant name="
      gamelist-list
      ">
      <view name="system,gamelist">
         <textlist name="item-list">
            <size>0.853846153846154 0.733333333333333</size><!-- 888 352 -->
         </textlist>
         <helpsystem name="help">
            <pos>0.032692307692308 0.904166666666667</pos><!-- 34 434 -->
         </helpsystem>
      </view>
   </variant>

   <!-- Variants: List + Cover, List + Screenshot -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot
      ">
      <view name="system">
         <textlist name="item-list">
            <size>0.911538461538462 0.733333333333333</size><!-- 948 352 -->
         </textlist>
      </view>
      <view name="gamelist">
         <textlist name="item-list">
            <size>0.401923076923077 0.733333333333333</size><!-- 418 352 -->
         </textlist>
         <image name="game-art">
            <pos>0.729807692307692 0.441666666666667</pos><!-- 759 212 -->
         </image>
      </view>
   </variant>

   <!-- Variants: List + Cover -->
   <variant name="
      gamelist-list-cover
      ">
      <view name="gamelist">
         <image name="game-art">
            <maxSize>0.451923076923077 0.733333333333333</maxSize><!-- 470 352 -->
         </image>
      </view>
   </variant>

   <!-- Variants: List + Screenshot -->
   <variant name="
      gamelist-list-screenshot
      ">
      <view name="gamelist">
         <image name="game-art">
            <cropSize>0.451923076923077 0.733333333333333</cropSize><!-- 470 352 -->
         </image>
      </view>
   </variant>

</theme>