<!-- 
3:2 aspect ratio
based on 720x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <textlist name="item-list">
         <pos>0.063888888888889 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
      <helpsystem name="help">
         <fontSize>${helpsystemFontSize}</fontSize>
         <entrySpacing>0.011111111111111</entrySpacing><!-- 8 -->
         <iconTextSpacing>0.004166666666667</iconTextSpacing><!-- 3 -->
      </helpsystem>
      <badges name="badges">
         <pos>0.955555555555556 0.083333333333333</pos><!-- 688 40 -->
         <size>0.055555555555556 0.733333333333333</size><!-- 40 352 -->
      </badges>
   </view>
   <fontSize name="small,x-small">
      <variables>
         <selectedBackgroundMargins>0.013888888888889 0.013888888888889</selectedBackgroundMargins><!-- 10 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.019444444444444 0.019444444444444</selectedBackgroundMargins><!-- 14 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="large,x-large">
      <variables>
         <selectedBackgroundMargins>0.025 0.025</selectedBackgroundMargins><!-- 18 -->
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
      </variables>
   </fontSize>

   <!-- Variants: List -->
   <variant name="
      gamelist-list
      ">
      <view name="system,gamelist">
         <textlist name="item-list">
            <size>0.788888888888889 0.733333333333333</size><!-- 568 352 -->
         </textlist>
         <helpsystem name="help">
            <pos>0.047222222222222 0.904166666666667</pos><!-- 34 434 -->
         </helpsystem>
      </view>
   </variant>

   <!-- Variants: List + Cover, List + Screenshot -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot
      ">
      <view name="system">
         <textlist name="item-list">
            <size>0.872222222222222 0.733333333333333</size><!-- 628 352 -->
         </textlist>
      </view>
      <view name="gamelist">
         <textlist name="item-list">
            <size>0.401388888888889 0.733333333333333</size><!-- 289 352 -->
         </textlist>
         <image name="game-art">
            <pos>0.735416666666667 0.441666666666667</pos><!-- 529.5 212 -->
         </image>
      </view>
   </variant>

   <!-- Variants: List + Cover -->
   <variant name="
      gamelist-list-cover
      ">
      <view name="gamelist">
         <image name="game-art">
            <maxSize>0.401388888888889 0.733333333333333</maxSize><!-- 289 352 -->
         </image>
      </view>
   </variant>

   <!-- Variants: List + Screenshot -->
   <variant name="
      gamelist-list-screenshot
      ">
      <view name="gamelist">
         <image name="game-art">
            <cropSize>0.401388888888889 0.733333333333333</cropSize><!-- 289 352 -->
         </image>
      </view>
   </variant>

</theme>