<!-- 
16:9 aspect ratio
based on 853x480
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <textlist name="item-list">
         <pos>0.053927315357562 0.075</pos><!-- 46 36 -->
         <selectedBackgroundMargins>${selectedBackgroundMargins}</selectedBackgroundMargins>
      </textlist>
      <helpsystem name="help">
         <fontSize>${helpsystemFontSize}</fontSize>
         <entrySpacing>0.009378663540445</entrySpacing><!-- 8 -->
         <iconTextSpacing>0.003516998827667</iconTextSpacing><!-- 3 -->
      </helpsystem>
      <badges name="badges">
         <pos>0.962485345838218 0.083333333333333</pos><!-- 821 40 -->
         <size>0.046893317702227 0.733333333333333</size><!-- 40 352 -->
      </badges>
   </view>
   <fontSize name="small,x-small">
      <variables>
         <selectedBackgroundMargins>0.011723329425557 0.011723329425557</selectedBackgroundMargins><!-- 10 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <selectedBackgroundMargins>0.01641266119578 0.01641266119578</selectedBackgroundMargins><!-- 14 -->
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="large,x-large">
      <variables>
         <selectedBackgroundMargins>0.021101992966002 0.021101992966002</selectedBackgroundMargins><!-- 18 -->
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
      </variables>
   </fontSize>

   <!-- Variants: List -->
   <variant name="
      gamelist-list
      ">
      <view name="system,gamelist">
         <textlist name="item-list">
            <size>0.821805392731536 0.733333333333333</size><!-- 701 352 -->
         </textlist>
         <helpsystem name="help">
            <pos>0.039859320046893 0.908333333333333</pos><!-- 34 434 -->
         </helpsystem>
      </view>
   </variant>

   <!-- Variants: List + Cover, List + Screenshot -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot
      ">
      <view name="system,gamelist">
         <textlist name="item-list">
            <size>0.892145369284877 0.733333333333333</size><!-- 761 352 -->
         </textlist>
      </view>
      <view name="gamelist">
         <textlist name="item-list">
            <size>0.420867526377491 0.733333333333333</size><!-- 359 352 -->
         </textlist>
         <image name="game-art">
            <pos>0.739742086752638 0.441666666666667</pos><!-- 631 212 -->
         </image>
      </view>
   </variant>

   <!-- Variants: List + Cover -->
   <variant name="
      gamelist-list-cover
      ">
      <view name="gamelist">
         <image name="game-art">
            <maxSize>0.412661195779601 0.733333333333333</maxSize><!-- 352 352 -->
         </image>
      </view>
   </variant>

   <!-- Variants: List + Screenshot -->
   <variant name="
      gamelist-list-screenshot
      ">
      <view name="gamelist">
         <image name="game-art">
            <cropSize>0.412661195779601 0.733333333333333</cropSize><!-- 352 352 -->
         </image>
      </view>
   </variant>

</theme>