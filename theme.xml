<theme>

   <!--
   ///
   Variables
   ///
   -->
   <variables>
      <spacerImage>./_inc/images/space.png</spacerImage>
      <listFont>./_inc/fonts/BPreplayBold.otf</listFont>
   </variables>
   <include>./colors.xml</include>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>true</tile>
         <color>${backgroundColor}</color>
         <path>${spacerImage}</path>
         <zIndex>0</zIndex>
      </image>
      <textlist name="item-list">
         <origin>0 0</origin>
         <fontPath>${listFont}</fontPath>
         <fontSize>${listFontSize}</fontSize><!-- 32 -->
         <lineSpacing>${listLineSpacing}</lineSpacing>
         <selectorColor>00000000</selectorColor>
         <selectedBackgroundColor>${listSelectedBackgroundColor}</selectedBackgroundColor>
         <selectedColor>${listSelectedColor}</selectedColor>
         <primaryColor>${listUnselectedColor}</primaryColor>
         <secondaryColor>${listUnselectedColor}</secondaryColor>
         <letterCaseAutoCollections>capitalize</letterCaseAutoCollections>
         <letterCaseSystemNameSuffix>lowercase</letterCaseSystemNameSuffix>
         <zIndex>1</zIndex>
      </textlist>
      <image name="help-background">
         <origin>0 1</origin>
         <pos>0 1</pos>
         <size>1 0.1875</size><!-- 100% 90 -->
         <tile>true</tile>
         <color>${backgroundColor}</color>
         <path>${spacerImage}</path>
         <stationary>always</stationary>
         <zIndex>2</zIndex>
      </image>
      <helpsystem name="help">
         <origin>0 0.5</origin>
         <originDimmed>0.5 0</originDimmed>
         <posDimmed>0.5 0.93</posDimmed>
         <fontSize>${helpsystemFontSize}</fontSize>
         <textColor>${helpTextColor}</textColor>
         <iconColor>${helpIconColor}</iconColor>
      </helpsystem>
   </view>
   <fontSize name="small">
      <variables>
         <listFontSize>0.033333333333333</listFontSize><!-- 16 -->
         <listLineSpacing>2.2625</listLineSpacing>
         <helpsystemFontSize>0.033333333333333</helpsystemFontSize><!-- 16 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <listFontSize>0.05</listFontSize><!-- 24 -->
         <listLineSpacing>1.8875</listLineSpacing>
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <listFontSize>0.066666666666667</listFontSize><!-- 32 -->
         <listLineSpacing>1.9</listLineSpacing>
         <helpsystemFontSize>0.0375</helpsystemFontSize><!-- 18 -->
      </variables>
   </fontSize>

