<theme>
   <colorScheme name="dark-bold,light-bold">
      <variables>
         <textlistFont>./_inc/fonts/BPreplayBold.otf</textlistFont>
      </variables>
   </colorScheme>
   <colorScheme name="dark-regular,light-regular">
      <variables>
         <textlistFont>./_inc/fonts/BPreplay.otf</textlistFont>
      </variables>
   </colorScheme>
   <colorScheme name="dark-bold,dark-regular">
      <variables>
         <backgroundTile>true</backgroundTile>
         <backgroundPath>${spacerImage}</backgroundPath>
         <backgroundColor>000000</backgroundColor>
         <textlistSelectedColor>000000</textlistSelectedColor>
         <textlistSelectedBackgroundColor>F7FBF7</textlistSelectedBackgroundColor>
         <textlistUnselectedColor>F7FBF7</textlistUnselectedColor>
         <helpsystemFont>default</helpsystemFont>
         <helpsystemLetterCase>uppercase</helpsystemLetterCase>
         <helpsystemIconColor>454e45</helpsystemIconColor>
         <helpsystemTextColor>F7FBF7</helpsystemTextColor>
         <helpsystemBackgroundColor>000000</helpsystemBackgroundColor>
         <badgeIconColor>454e45</badgeIconColor>
      </variables>
   </colorScheme>
   <colorScheme name="light-bold,light-regular">
      <variables>
         <backgroundTile>true</backgroundTile>
         <backgroundPath>${spacerImage}</backgroundPath>
         <backgroundColor>F7FBF7</backgroundColor>
         <textlistSelectedColor>F7FBF7</textlistSelectedColor>
         <textlistSelectedBackgroundColor>000000</textlistSelectedBackgroundColor>
         <textlistUnselectedColor>000000</textlistUnselectedColor>
         <helpsystemFont>default</helpsystemFont>
         <helpsystemLetterCase>uppercase</helpsystemLetterCase>
         <helpsystemIconColor>454e45</helpsystemIconColor>
         <helpsystemTextColor>000000</helpsystemTextColor>
         <helpsystemBackgroundColor>F7FBF7</helpsystemBackgroundColor>
         <badgeIconColor>454e45</badgeIconColor>
      </variables>
   </colorScheme>
   <colorScheme name="pocket-dmg">
      <variables>
         <textlistFont>./_inc/fonts/AnalogueOS-Regular.otf</textlistFont>
         <backgroundTile>true</backgroundTile>
         <backgroundPath>./_inc/images/background-pocket-dmg.png</backgroundPath>
         <backgroundColor>ffffff</backgroundColor>
         <textlistSelectedColor>ffffff</textlistSelectedColor>
         <textlistSelectedBackgroundColor>F59403</textlistSelectedBackgroundColor>
         <textlistUnselectedColor>F9C19F99</textlistUnselectedColor>
         <helpsystemFont>./_inc/fonts/AnalogueOS-Regular.otf</helpsystemFont>
         <helpsystemLetterCase>capitalize</helpsystemLetterCase>
         <helpsystemIconColor>D30002</helpsystemIconColor>
         <helpsystemTextColor>F59403</helpsystemTextColor>
         <helpsystemBackgroundColor>00000000</helpsystemBackgroundColor>
         <badgeIconColor>4DD8EB</badgeIconColor>
      </variables>
   </colorScheme>
   <!-- 
   Start custom Color Scheme. Please see instructions at:
   https://github.com/anthonycaccese/miniui-menu-es-de?tab=readme-ov-file#create-a-custom-color-scheme
   -->
   <colorScheme name="custom">
      <variables>
         <textlistFont>./_inc/fonts/BPreplayBold.otf</textlistFont>
         <backgroundTile>true</backgroundTile>
         <backgroundPath>${spacerImage}</backgroundPath>
         <backgroundColor>000000</backgroundColor>
         <textlistSelectedColor>000000</textlistSelectedColor>
         <textlistSelectedBackgroundColor>F7FBF7</textlistSelectedBackgroundColor>
         <textlistUnselectedColor>F7FBF7</textlistUnselectedColor>
         <helpsystemFont>default</helpsystemFont>
         <helpsystemLetterCase>uppercase</helpsystemLetterCase>
         <helpsystemIconColor>454e45</helpsystemIconColor>
         <helpsystemTextColor>F7FBF7</helpsystemTextColor>
         <helpsystemBackgroundColor>000000</helpsystemBackgroundColor>
         <badgeIconColor>454e45</badgeIconColor>
      </variables>
   </colorScheme>
</theme>